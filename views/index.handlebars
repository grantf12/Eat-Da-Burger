<html lang="en">

<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/assets/css/style.css" type="text/css">
  <title>Da-Burger</title>
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="/assets/js/burger.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
  <div class="container">

    <div class="jumbotron text-center">
      <h1>Eat-Da-Burger!</h1>
      <p>What kind of burger do you want?</p>

      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="newburger" name="name">
        </div>
        <button type="submit">Create</button>
      </form>
      <img style="height: 350px; width:auto"
        src="https://i.pinimg.com/originals/6a/27/ac/6a27ac5560df47ec8bb998051b74b1f0.png" alt="burger_image">


    </div>
    <div class="row">
      <div class=col-sm-6>
        <h3>Burgers Ready</h3>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <li>
            <span>{{this.burger_name}}</span>
            <button type="button" class="devourit btn btn-warning" id="devourit" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span>Devour It!</span></button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-sm-6">
        <h3>Devoured Burgers</h3>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          <li>
            <span>{{this.id}}.{{this.burger_name}}</span>
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

  </div>