<div class="container">
  <div class="jumbotron">
    <h1>Eat-Da-Burger!</h1>
    <div class="rol-sm-6">
      <p>What kind of burger do you want?</p>
      </hr>

      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="newburger" name="name">
        </div>

        <button type="submit">Create</button>
      </form>
    </div>
    <div class="col-sm-6">
      <img src="../public/assets/img/burgerpic.png" alt="burger_image">
    </div>
  </div>

  <div class="row">
    <div class=col-sm-6>
      <h3>Burgers Ready</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <span>{{this.burger_name}}</span>
          <button type="button" class="devourit btn btn-warning" id="devourit" data-id="{{this.id}}"
            data-newDevoured="{{devour}}"><span>Devour It!</span></button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h3>Devoured Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          <span>{{this.burger_name}}</span>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>
